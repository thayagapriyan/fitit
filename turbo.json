{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "create-tables": {
      "cache": false
    },
    "seed-data": {
      "cache": false
    },
    "synth": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "deploy": {
      "cache": false,
      "dependsOn": ["synth"]
    },
    "diff": {
      "cache": false
    },
    "destroy": {
      "cache": false
    },
    "bootstrap": {
      "cache": false
    }
  }
}
